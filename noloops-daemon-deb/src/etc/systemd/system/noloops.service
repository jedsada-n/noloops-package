[Unit]
Description=Noloops
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment="CENSORED_KEYWORDS_PATH=/usr/share/noloops/censored-keywords.yaml"
EnvironmentFile=/etc/noloops/.env
ExecStart=/usr/bin/noloops
Restart=on-failure
RestartSec=5
StartLimitIntervalSec=300
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
